/* pages/audio/audio.wxss */
.audio{
   display: none; 
  width: 100%;
}
.audiov{
  display: block;
  width: 500rpx;
  height: 500rpx;
  margin: 0 auto;
  position: relative;
}
.audiov>image:nth-of-type(1){
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 50%;
}
.audiov-v{
  position: absolute;
  top: 50%;
  left: 50%;
  height: 100rpx;
  width: 100rpx;
}
.audiov .audiovs{
  width: 100%;
  height: 100%;
  display: inline-block;
  position: absolute;
  top:-50%;
  left: -50%;
  z-index: 99;
}